<%
  # Variable sanity checking

  # This is used below, so don't mess around with it unless you know what it's
  # doing!
  t_process_types = {
    'main_process' => '',
    'pre_start' => 'pre-start ',
    'post_start' => 'post-start ',
    'pre_stop' => 'pre-stop ',
    'post_stop' => 'post-stop '
  }

  t_valid_limits = [
    'core',
    'cpu',
    'data',
    'fsize',
    'memlock',
    'msgqueue',
    'nice',
    'nofile',
    'nproc',
    'rss',
    'rtprio',
    'sigpending',
    'stack'
  ]
-%>
# This file managed by Puppet
# Changes will be overwritten on the next Puppet run.
#

<%
  t_process_types.keys.each do |t_var_name|
    unless eval("@#{t_var_name}").eql?('nil')

      if eval("@#{t_var_name}_type") == 'exec'
-%>
<%= t_process_types[t_var_name] %>exec <%= eval("@#{t_var_name}") %>
<%
      else
-%>
<%= t_process_types[t_var_name] %>script
<%= eval("@#{t_var_name}") %>
end script
<%    end -%>
<%  end -%>
<% end -%>
start on <%= @start_on %>
<% unless @stop_on.empty? -%>
stop on <%= @stop_on %>
<% end -%>
<% unless @default_env.empty? -%>
env <%= @default_env %>
<% end -%>
<% unless @env_export.empty? -%>
export <%= @env_export %>
<% end -%>
<% if @is_task  -%>
task
<% end -%>
<% if @respawn  -%>
respawn
<% end -%>
<% unless @respawn_limit.empty? -%>
respawn limit
<% end -%>
<% unless @normal_exit.empty? -%>
normal exit <%= Array(@normal_exit).join(' ') %>
<% end -%>
<% unless @instance_name.empty? -%>
instance <%= @instance_name %>
<% end -%>
<% unless @description.empty? -%>
description "<%= @description %>"
<% end -%>
<% unless @author.empty? -%>
author "<%= @author %>"
<% end -%>
<% unless @doc_version.empty? -%>
version "<%= @doc_version %>"
<% end -%>
<% unless @emits.empty? -%>
emits <%= Array(@emits).join(' ') %>
<% end -%>
<% unless @console.empty? -%>
console <%= @console %>
<% end -%>
<% unless @umask.empty? -%>
umask <%= @umask %>
<% end -%>
<% unless @nice.empty? -%>
nice <%= @nice %>
<% end -%>
<% unless @oom.empty? -%>
oom <%= @oom %>
<% end -%>
<% unless @chroot.empty? -%>
chroot <%= @chroot %>
<% end -%>
<% unless @chdir.empty? -%>
chdir <%= @chdir %>
<% end -%>
<% unless @sys_limit.empty? -%>
limit <%= Array(@sys_limit).join(' ') %>
<% end -%>
<% unless @kill_timeout.empty? -%>
kill timeout <%= @kill_timeout %>
<% end -%>
<% if @expect_stop  -%>
expect stop
<% end -%>
<% if @expect_daemon  -%>
expect daemon
<% end -%>
<% if @expect_fork  -%>
expect fork
<% end -%>
